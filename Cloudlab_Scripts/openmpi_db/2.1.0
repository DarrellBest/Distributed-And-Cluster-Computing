
#%Module1.0##

module-whatis   "Set up environment for the OpenMPI libraries (autoselect interconnect)"

# for Tcl script use only
set     version      "3.2.10"

prereq gcc intel pgi

setenv OMPI_VERSION "2.1.0"

# this will silence errors about missing mx or ib drivers
setenv OMPI_MCA_mca_base_component_show_load_errors 0

if [ info exists env(CC) ] {
   setenv OMPI_CC  "$env(CC)"
}
if [ info exists env(CXX) ] {
   setenv OMPI_CXX "$env(CXX)"
}
if [ info exists env(F77) ] {
   setenv OMPI_F77 "$env(F77)"
}
if [ info exists env(F90) ] {
   setenv OMPI_FC "$env(F90)"
}

if [ is-loaded gcc ] {
  setenv MPI_DIR "/packages/openmpi/2.1.0
}

prepend-path  PATH                 "/packages/openmpi/2.1.0/bin"
prepend-path  LD_LIBRARY_PATH      "/packages/openmpi/2.1.0/lib"
prepend-path  MANPATH              "/packages/openmpi/2.1.0/share/man"
prepend-path  LIBRARY_PATH         "/packages/openmpi/2.1.0/lib"
prepend-path  C_INCLUDE_PATH       "/packages/openmpi/2.1.0/include"
prepend-path  CPLUS_INCLUDE_PATH   "/packages/openmpi/2.1.0/include"

if [ module-info mode display ] {
        ModulesHelp
}
